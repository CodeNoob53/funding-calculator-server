# Coinglass API key for accessing funding rates
API_KEY=your_coinglass_api_key

# Coinglass API URL
COINGLASS_API_URL=https://open-api.coinglass.com/public/v2/funding

# JWT secret for WebSocket authentication
# Generate a secure, random string (at least 32 characters) using a tool like:
# `node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"`
JWT_SECRET=your_jwt_secret_key

# Admin username for WebSocket authentication
# This is used to authenticate WebSocket connections
# You can set this to any username you prefer
ADMIN_USERNAME=admin
# Admin password for WebSocket authentication
# Generate a secure, random string (at least 32 characters) using a tool like:
# `node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"`
# Note: Use a strong password and store it securely
# You can use a password manager to generate and store it securely
ADMIN_PASSWORD=password

# Client URL for CORS (e.g., your frontend app)
# For local development, use http://localhost:3031
# For production, use your deployed frontend URL (e.g., https://your-client-app.com)
CLIENT_URL=http://localhost:3031

# Server port
PORT=3001

# Configuration parameters (used via config/index.js)
# Cache TTL in seconds
CACHE_TTL=60

# Funding data update interval in milliseconds
FUNDING_UPDATE_INTERVAL=20000

# WebSocket ping timeout in milliseconds
SOCKET_PING_TIMEOUT=30000

# WebSocket ping interval in milliseconds
SOCKET_PING_INTERVAL=10000